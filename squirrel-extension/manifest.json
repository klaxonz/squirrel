{
  "manifest_version": 3,
  "name": "Squirrel",
  "version": "3.0",
  "description": "在B站、YouTube和PH添加视频下载和频道订阅按钮 (v3)",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "*://*.bilibili.com/*",
    "*://*.youtube.com/*",
    "*://*.pornhub.com/*",
    "*://*.javdb.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}